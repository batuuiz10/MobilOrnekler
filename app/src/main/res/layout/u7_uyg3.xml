<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/urunListe"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        app:layout_marginStart="10dp"
        app:layout_marginTop="10dp"
        app:layout_MarginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVerical_bias="0.0"
        app:layout_constraintVertical_bias="0.069" />

    <Button
        android:id="@+id/btnKayitEkle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizonral_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/urunListe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layoutonClick="btnYeniKayitEkleClick"
        android:text="YeniKayitEkle"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="612dp" />
</androidx.constraintlayout.widget.ConstraintLayout>